<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view1"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="16dp">

    <!-- 2 건물정보 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:id="@+id/content_detail_2_title"
                android:text="공간정보"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_below="@id/content_detail_2_title"
                android:id="@+id/space_type"
                android:textStyle="bold"
                android:text="종류"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_detail_2_title"
                android:id="@+id/space_type_value"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="50sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:id="@+id/space_date"
                android:layout_below="@id/space_type"
                android:textStyle="bold"
                android:text="날짜"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/space_date_value"
                android:layout_below="@id/space_type_value"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="50sp"
                android:textColor="#000000" />

        </RelativeLayout>

</android.support.v7.widget.CardView>
