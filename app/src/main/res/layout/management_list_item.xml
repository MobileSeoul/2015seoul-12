<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#f5ebd3">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#ffffff">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/manageImage"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혜화 에듀센터"
                android:layout_gravity="right"
                android:textSize="25sp"
                android:textColor="#ff841f"
                android:textStyle="bold"
                android:id="@+id/manageTitle"
                android:gravity="right"
                />
            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015/10/09 - 2015/10/10"
                android:layout_gravity="right"
                android:id="@+id/managePeriod"
                />
            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="1000원"
                android:textColor="#2d2d2d"
                android:id="@+id/managePrice"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mat_container"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/remove_btn"
                    android:id="@+id/manageDeleteBtn"
                    android:onClick="manageDelete"
                    /></LinearLayout>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>